@page "/"
@using blazor_wasm.Applicaiton
@inject IndexViewModel ViewModel

<h1>Hello, world!</h1>

@if(ViewModel.IsAuthenticated)
{
    @ViewModel.Name
}
else
{
    <button class="btn btn-primary" @onclick="@(async () => await ViewModel.Authenticate())">Authenticate</button>
}

<p class="alert-danger">@ViewModel.Error</p>
